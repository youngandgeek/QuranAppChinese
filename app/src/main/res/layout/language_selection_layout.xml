<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/translation_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:backgroundTint="#C6C0C0"
    android:background="@drawable/_bg__frame_2_ek2_shape"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Translation"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:backgroundTint="#BAB6B6"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:background="@drawable/_bg__frame_2_ek2_shape"
        />
    <RadioGroup
        android:id="@+id/translation_rg"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/chinese_lan_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:checked="true"

            />
        <RadioButton
            android:id="@+id/chinese_2_lan_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese 2"
            />

        <RadioButton
            android:id="@+id/french_lan_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FranÃ§ais"
            />
        <RadioButton
            android:id="@+id/swahili_lan_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swahili"
            />
        <RadioButton
            android:id="@+id/japanese_lan_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Japanese"
            />
    </RadioGroup>
<Button
    android:id="@+id/save_lan_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#BAB6B6"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:textSize="16sp"
    android:textColor="@color/white"
    android:text="Save"
    android:textStyle="bold"
    />
</LinearLayout>